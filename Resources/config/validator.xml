<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="form_extra.validator.unique.class">BeSimple\FormExtraBundle\Validator\Constraints\UniqueValidator</parameter>
    </parameters>

    <services>
        <service id="form_extra.validator.unique" class="%form_extra.validator.unique.class%">
            <tag name="validator.constraint_validator" alias="form_extra.validator.unique" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>
    </services>
</container>